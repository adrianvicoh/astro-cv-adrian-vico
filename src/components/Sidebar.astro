---
const { dades } = Astro.props;
const { nom, telefon, data_naixement, adreça, població } = dades;
---

<div class="sidebar">
    <img src="/img/IMG_0023.jpg" class="mx-auto d-block" alt="foto" />
    <h2>{nom}</h2>
    <p><i class="bi bi-telephone-fill"></i> {telefon}</p>
    <p><i class="bi bi-calendar2-day"></i> {data_naixement}</p>
    <p><i class="bi bi-geo-alt-fill"></i> {adreça}</p>
    <p><i class="bi bi-house-door-fill"></i> {població}</p>
</div>
